@{
    Layout = null; // для предстваления не используется мастер-страница
}

<!DOCTYPE html>
<html>
<head>
    <title>
        Index
    </title>
</head>

<body>
    <h3>Товары интернет магазина MarketNew</h3>

    <br />

    <table>
        <thead>
            <tr>
                <td>Название</td>
                <td>Производитель</td>
                <td>Цена (руб)</td>
                <td>&nbsp;</td>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var phone in ViewBag.Phones)
                {
                    <tr>
                        <td>@phone.Name</td>
                        <td>@phone.Producer</td>
                        <td>@phone.Price</td>
                        <td><a href="/Market/Buy/@phone.Id">Купить</a></td>
                    </tr>
                }
                <tr>
                    <td><a href="/Market/AddPhone/">Добавить телефон</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>